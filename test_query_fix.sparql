PREFIX bldg: <urn:hpflex/hpflex_demo#> 
PREFIX brick: <https://brickschema.org/schema/Brick#> 
PREFIX qudt: <http://qudt.org/schema/qudt/> 
PREFIX unit: <http://qudt.org/vocab/unit/> 

SELECT DISTINCT ?floor_area ?window_area ?azimuth ?tilt 
        ?zone ?hvac ?cooling_capacity ?heating_capacity ?cooling_cop ?heating_cop  
WHERE {
    ?tstat brick:hasLocation ?zone .
    ?zone a brick:HVAC_Zone .
    
    # Get space/floor area
    ?zone brick:hasPart ?room .
    ?room a brick:Space ;
        brick:area/brick:value ?floor_area .
    
    # Get window information (one window per result)
    ?zone brick:hasPart ?window .
    ?window a brick:Window ;
        brick:area/brick:value ?window_area ;
        brick:azimuth/brick:value ?azimuth ;
        brick:tilt/brick:value ?tilt .
    
    # Optional HVAC equipment (since it doesn't exist in your graph)
    OPTIONAL {
        ?zone brick:isFedBy ?hvac .
        ?hvac brick:coolingCapacity/brick:value ?cooling_capacity .
        ?hvac brick:heatingCapacity/brick:value ?heating_capacity .
        ?hvac brick:heatingCoefficientOfPerformance/brick:value ?heating_cop .
        ?hvac brick:coolingCoefficientOfPerformance/brick:value ?cooling_cop .
    }
} 